# .env-template for Crawl4AI MCP Server

# Server configuration
PORT=11235                       # MCP server listening port
NODE_ENV=development             # Environment mode (development|production)

# MCP metadata
MCP_NAME=Crawl4AI-MCP             # MCP server name
MCP_VERSION=1.0.0                 # MCP server version
# MCP_DESCRIPTION=                # MCP server description (optional)

# Crawl4AI service
CRAWL_SERVICE_URL=http://crawl4ai-service:3000  # Base URL for Crawl4AI service

# Default crawl settings
CRAWL_DEFAULT_MAX_PAGES=10        # Default maximum pages to crawl
CRAWL_DEFAULT_DEPTH=3             # Default crawl depth
CRAWL_DEFAULT_STRATEGY=bfs        # Default crawl strategy (bfs|dfs)
CRAWL_DEFAULT_WAIT_TIME=1000      # Default wait time between requests (ms)

# Logging
LOG_LEVEL=info                    # Logging level (debug|info|warn|error)

# Cache settings
CACHE_TTL=3600                    # Cache TTL in seconds

# Request handling
MAX_REQUEST_SIZE=10mb             # Maximum JSON request body size

# CORS configuration
CORS_ORIGINS=*                    # Comma-separated list of allowed CORS origins

# Rate limiting
RATE_LIMIT_WINDOW=900000          # Rate limit window in milliseconds (15 minutes)
RATE_LIMIT_MAX_REQUESTS=100       # Max requests per RATE_LIMIT_WINDOW

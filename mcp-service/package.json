{
  "name": "webcrawler-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server with web crawling capabilities for AI agents",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:abort": "jest --testPathPattern=abort",
    "test:mcp-compliance": "ts-node src/test/mcp-compliance-test.ts",
    "test:error-resilience": "ts-node src/test/error-resilience-test.ts",
    "test:sitemap": "ts-node src/test/sitemap-generator-test.ts",
    "test:extract-links": "ts-node src/test/extract-links-test.ts",
    "prepublishOnly": "npm run build",
    "preinstall": "set PUPPETEER_SKIP_DOWNLOAD=true"
  },
  "keywords": [
    "mcp",
    "web-scraper",
    "ai",
    "model-context-protocol"
  ],
  "author": "Steffen Hebestreit",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "@types/joi": "^17.2.2",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsdom": "^22.1.0",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.9",
    "puppeteer": "^24.10.0",
    "turndown": "^7.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/axios": "^0.14.4",
    "@types/body-parser": "^1.19.5",
    "@types/connect": "^3.4.38",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/helmet": "^0.0.48",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/mime": "^3.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.5.6",
    "@types/node-fetch": "^2.6.4",
    "@types/qs": "^6.9.18",
    "@types/range-parser": "^1.2.7",
    "@types/send": "^0.17.4",
    "@types/serve-static": "^1.15.7",
    "@types/tough-cookie": "^4.0.5",
    "@types/turndown": "^5.0.5",
    "@types/uuid": "^9.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.1",
    "tsx": "^4.19.4",
    "typescript": "^5.2.2"
  }
}
